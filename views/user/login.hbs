
  <section class="vh-100 gradient-custompt-4">
    <div class="container py-5 h-auto">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card  text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">

              <div class="mb-md-5 mt-md-4 pb-5">

                <h2 class="fw-bold mb-2 text-dark text-uppercase">Login</h2>
                  
                 <P class=" mb-1 text-danger">
                 
                 <p class="text-dark">Please enter your login and password!</p>
                 

                <form action="/login" method="post">
                  <div class="form-outline form-white mb-4">
                    <input type="email" id="typeEmailX" name="email" placeholder="Email"
                      class="form-control form-control-lg" />
                    <label class="form-label text-dark">Email</label>
                  </div>

                  <div class="form-outline form-white mb-4">
                    <input type="password" name="password" id="typePasswordX" placeholder="Password"
                      class="form-control form-control-lg" />
                    <label class="form-label text-dark">Password</label>
                  </div>
                  <div class="signup d-flex mb-5">
                    <a href="/signup">Create a New Account</a>
                  </div>

                  <button class="btn btn-primary btn-lg px-5" type="submit ">Login</button>
                 
              </div>
               {{#if loginerr}}
                  <p style="color:red">Please Enter Valid Details</p>
                  {{/if}}

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

